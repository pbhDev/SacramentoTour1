<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/single_item_list">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        >

        <TextView
            android:id="@+id/site_name"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="@dimen/itemheight"
            android:paddingLeft="@dimen/standard16dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/capitol"
            android:textSize="@dimen/textnamesize"
            android:background="@color/colorAccent"/>

        <ImageView
            android:id="@+id/image_of_site"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/CategoryStyle"
            android:src="@drawable/capitol"
            android:scaleType="centerCrop"
            android:background="@color/colorAccent"
            android:layout_weight="0.3"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mid10dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>
