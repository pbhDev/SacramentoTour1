<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalEvents">


    <LinearLayout
        android:id="@+id/layout_LocalEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/mid10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_localevent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_marginTop="@dimen/mid10dp"
            android:layout_marginBottom="@dimen/mid10dp"
            android:elevation="@dimen/mid10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/image_of_local_business"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyvlerView_LocalEvent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"/>
    </LinearLayout>

</FrameLayout>