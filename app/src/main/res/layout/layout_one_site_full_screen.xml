<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_site"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_of_site1"
        style="@style/CategoryStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/standard16dp"
        android:layout_weight="0.65"
        android:background="@color/colorAccent"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/capitol"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/standard16dp"
        android:layout_weight="0.35"
        android:background="@color/colorAccent"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/standard16dp">

        <TextView
            android:id="@+id/site_name1"
            style="@style/CategoryStyle"
            android:background="@color/colorAccent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/capitol"
            android:textSize="@dimen/textnamesize" />

        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard16dp"
            android:autoLink="map"
            android:maxLines="2"
            android:text="@string/address"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/website1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard16dp"
            android:autoLink="web"
            android:text="@string/website"
            android:textColorLink="#000000" />

        <LinearLayout
            android:id="@+id/layout_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard16dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_phone1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:fontFamily="casual"
                android:src="@drawable/ic_baseline_call_24px"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/phone_number1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mid10dp"
                android:layout_weight="0.8"
                android:autoLink="phone"
                android:background="@color/colorAccent"
                android:text="916-555-1555"
                android:textColorLink="#000000"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
